@import '../../static/weui.wxss';
page{
    background-color: #FFFFFF;
}
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:opacity .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}

.slide{
  /* border-top:1px solid #ccc; */
  background:  #eee;
  width: 100%;
  overflow: hidden;
}
.membertext {
  height: 70rpx;
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  color: #999;
  font-size:28rpx;
}
.membertext van-checkbox{
  background: #fff;
}
.membertext .view:nth-child(1){
  width: 25%;
  white-space: nowrap;
  overflow: hidden;

}
.membertext .view:nth-child(2){
  width: 15%;
}
.membertext .view:nth-child(3){
  width: 40%;
}
.telephone{
  width: 30%;
  text-align: center;
}
.slide .telephone{
  color: #2EA7E0;
}
.slide .title{
  color: #333;
}
.slide .nostatus{
  color: #F43530;
}
.slide .status{
  color: #6DD400;
}
.slide .female{
  color: #ff79a3;
}
.membercheckbox{
  border-top: 1px solid #E6E6E6;
  height: 90rpx;
  width: 100%;
  margin: 0 auto;
  background: #fff;
  font-size:28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.checkbox-header{
  display: flex;
  flex-direction: row;
  height: 100%;
  align-items: center;
  width: 30%;
  justify-content: center;
  color: #999;
  font-size: 0.9em;
}
.checkbox-bottom{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.checkbox-bottom van-button{
  width: 100%;
  flex: 1;
}

.checkbox-bottom button{
  width: 100%;
  border-radius: 0;
}
.checkedalltype{
  display: flex;
  flex-direction: row;
  width: 60%;
  align-items: center;
  height: 100%;
  justify-content: space-around;
  font-weight: bold;
}
.weui-dialog{
  width: 100%;
  border-radius: 8px 8px 0 0;
}
.closeDialogicon{
  position: absolute;
  bottom: 5%;
}
