/* components/calendar.wxss */
/*日历开始  */
 
.scroll-view {
    height: 120rpx;
    background-color: #EDF6FB;
    width: 100%;
    white-space: nowrap;
  }
  .item {
    /* height: 100rpx; */
    display: inline-block;
  }
  .text-view {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100%;
    /* height: 100%; */
    color: #999;
  }
  .month {
    font-size: 30rpx;
    margin-top: 10rpx;
  }
  .week {
    font-size: 32rpx;
    margin-top: 10rpx;
  }
  .day {
    font-size: 32rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 60rpx;
    margin-top: 10rpx;
  }
  /* 日期选中的样式 */
  .day-active {
    background-color: #2EA7E0;
    color: #fff !important;
  }