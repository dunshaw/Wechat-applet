.content{
  background: #fafafa;
  width: 100%;
}

.searchbar{
  width: 100%;
  height: 110rpx;
  background: #fff;
  position: relative;
}
.searchbar-icon{
  position: absolute;
  top: 45rpx;
  left: 5%;
  }
.searchbar-input{
  height: 70rpx;
  background: #F4F4F4;
  width: 86%;
  margin: auto;
  border-radius: 4rpx;
  text-align: center;
  padding-left: 50rpx;
}

.chatlist{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.chatlist-item{
  width: 94%;
  margin-left: 3%;
  padding: 20rpx 10rpx 10rpx 10rpx;
  box-sizing: border-box;
  align-items: flex-start;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}
.chatlist-item image{
  width: 76rpx;
  height: 76rpx;
}
.chatlist-item-content{
  display: flex;
  justify-content: space-between;
}
.chatlist-item-content .username{
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
}
.chatlist-item-content .usertime{
  color: #ccc;
  font-size: 24rpx;
}
.chatlist-item-words{
  color: #999;
  font-size: 24rpx;
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.chatlist-item-right{
  flex:1;margin-left:10rpx;width:0;
  display: flex;
  flex-direction: column;
}
.em-msgNum {
	position: absolute;
	/* right: 32rpx;
	top: 76rpx; */
	min-width: 28rpx;
	height: 28rpx;
	border-radius: 14rpx;
	background: #f04134;
	color: #fff;
	line-height: 28rpx;
	font-size: 24rpx;
	text-align: center;
}