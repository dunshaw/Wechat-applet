.header {
    width: 100%;
    height: 600rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content:center;
    font-weight: bold;
}

image {
    width: 200rpx;
    height: 200rpx;
}

.content {
    width: 100%;
    margin: 0 auto;
    text-align: center;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.bottom {
    border-radius: 10rpx;
    color: #fff;
    background: #2ea7e0;
    width: 90%;
    margin-left: 5%;
}

