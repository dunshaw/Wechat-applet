/* pages/Progress/Progress.wxss */
page{
  background-color: #F5F5F5;
}
.Shell{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}
.progressList{
  width: 100%;
  height: 156rpx;
  margin: 0 0 20rpx 0;
  padding: 36rpx 30rpx 40rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.companyIcon{
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx 0 0;
  padding: 0;
  float: left;
}
.jobAndComName{
  width: 380rpx;
  height: 80rpx;
  margin: 0 20rpx 0 0;
  padding: 0;
  float: left;
}
.stateAndTime{
  width: 190rpx;
  height: 80rpx;
  margin: 0;
  padding: 0;
  float: left;
}
.job{
  width: 100%;
  height: 28rpx;
  margin: 8rpx 0 0 0;
  padding: 0;
  font-size: 28rpx;
  color: #333;
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.companyName{
  width: 100%;
  height: 24rpx;
  margin: 18rpx 0 0 0;
  padding: 0;
  font-size: 24rpx;
  color: #999;
  line-height: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.state{
  width: 100%;
  height: 24rpx;
  margin: 8rpx 0 0 0;
  padding: 0;
  font-size: 24rpx;
  color: #FF961E;
  line-height: 24rpx;
  text-align: right;
}
.time{
  width: 100%;
  height: 24rpx;
  margin: 18rpx 0 0 0;
  padding: 0;
  font-size: 24rpx;
  color: #999999;
  line-height: 24rpx;
  text-align: right;
}
.noProgress{
  width: 300rpx;
  height: max-content;
  overflow: hidden;
  margin: auto;
  padding: 0;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  text-align: center;
}
.noProgressIcon{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  padding: 0;
}
.tips1{
  width: 100%;
  overflow: hidden;
  margin: 0 0 20rpx 0;
  padding: 0;
  font-size: 24rpx;
  color: #666;
}
.tips2{
  width: 100%;
  overflow: hidden;
  margin: 0 0 20rpx 0;
  padding: 0;
  font-size: 34rpx;
  color: #333;
}
.goApply{
  width: 100%;
  height: 60rpx;
  margin: 0;
  padding: 0;
  background-color: #2EA7E0;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #fff;
  border-radius: 10rpx;
}

.islogin{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.islogin image{
  width: 590rpx;
  height: 430rpx;
}
.islogin text{
  margin-top: 60rpx;
  padding: 0 30rpx;
  font-size:16px;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:30px;
  border: 2rpx solid rgba(102,102,102,1);
  border-radius: 30rpx;
}